<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
    <mapper namespace="com.study.s1.notice.NoticeDAO">

    <select id="list" resultType="com.study.s1.notice.NoticeDTO">
     SELECT * FROM
	(SELECT ROWNUM R, N.* FROM
	(SELECT * FROM NOTICE WHERE NUM>0 AND 
	<choose>
	<when test="kind=='col1'">TITLE</when> 
	<when test="kind=='col2'">CONTENTS</when> 
	<when test="kind=='col3'">WRITER</when> 
	<otherwise>TITLE</otherwise>
	</choose>
	LIKE '%'||#{search}||'%' ORDER BY NUM DESC) N)
	 WHERE R BETWEEN #{startRow} AND #{lastRow}
    </select>
    
    <select id="total" resultType="Long" parameterType="Pager">
    	SELECT COUNT(NUM) FROM NOTICE
    	WHERE NUM>0 AND 
	<choose>
	<when test="kind=='col1'">TITLE</when> 
	<when test="kind=='col2'">CONTENTS</when> 
	<when test="kind=='col3'">WRITER</when> 
	<otherwise>TITLE</otherwise>
	</choose>
	LIKE '%'||#{search}||'%'
    </select>
    
    <select id="detail" parameterType="com.study.s1.notice.NoticeDTO" resultType="com.study.s1.notice.NoticeDTO">
    SELECT * FROM NOTICE WHERE NUM = #{num}
    </select>
    <insert id="add" parameterType="com.study.s1.notice.NoticeDTO">
    INSERT INTO NOTICE VALUES(NOTICE_SEQ.NEXTVAL,#{title},#{contents},#{writer},SYSDATE,0)
    </insert>
    <update id="update" parameterType="com.study.s1.notice.NoticeDTO">
    UPDATE NOTICE SET TITLE=#{title}, CONTENTS=#{contents} WHERE NUM=#{num}
    </update>
    <delete id="delete" parameterType="com.study.s1.notice.NoticeDTO">
    DELETE NOTICE WHERE NUM=#{num}
    </delete>
    </mapper>